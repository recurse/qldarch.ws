<?xml version="1.0" encoding="UTF-8"?>
<project name="jaxrs">
    <!-- Load manager account details for tomcat -->
    <property file="tomcat.properties" />

    <property name="version" value="0.0.1"/>
    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="lib" location="lib"/>
    <property name="src.main.java" location="${src}/main/java"/>
    <property name="src.test.java" location="${src}/test/java"/>
    <property name="build.main.java" location="${build}/jvm/classes"/>
    <property name="build.test.java" location="${build}/test/classes"/>
    <property name="src.war.conf" location="${src}/main/webapp"/>
    <property name="dist"  location="dist"/>
    <property name="test.dir" location="test"/>
    <property name="reports.dir" location="${test.dir}/reports"/>

    <taskdef name="deploy" classname="org.apache.catalina.ant.DeployTask"/>
    <taskdef name="undeploy" classname="org.apache.catalina.ant.UndeployTask"/>

    <path id="classpath.compile">
        <fileset dir="${build.main.java}">
            <include name="**/*.class"/>
        </fileset>
        <fileset dir="${lib}">
            <include name="**/*.jar"/>
            <exclude name="test/**.jar"/>
        </fileset>
    </path>

    <path id="classpath.test">
        <fileset dir="${build.main.java}">
            <include name="**/*.class"/>
        </fileset>
        <fileset dir="${lib}">
            <include name="**/*.jar"/>
            <exclude name="test/**.jar"/>
        </fileset>
<!--        <pathelement path="${classpath.compile}"/> Not sure why this doesn't work -->
        <fileset dir="${lib}">
            <include name="test/**.jar"/>
        </fileset>
        <fileset dir="${dist}">
            <include name="**.jar"/>
        </fileset>
    </path>

    <target name="all" depends="init,compile,test,dist"/>

    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

    <target name="init">
        <mkdir dir="${build.main.java}"/>
        <mkdir dir="${build.test.java}"/>
        <mkdir dir="${dist}"/>
        <mkdir dir="${test.dir}"/>
        <mkdir dir="${reports.dir}"/>
        <pathconvert property="classpath.compile.prop" refid="classpath.compile" />
        <pathconvert property="classpath.test.prop" refid="classpath.test" />
    </target>

    <target name="compile" depends="init">
        <echo message="Compling with classpath=${classpath.compile.prop}" />
        <javac classpath="${classpath.compile.prop}" 
            srcdir="${src.main.java}"
            destdir="${build.main.java}"
            deprecation="on"
            includeantruntime="false" />
    </target>

    <target name="test.compile">
        <echo message="Compling with classpath=${classpath.test.prop}" />
        <javac classpath="${classpath.test.prop}" 
            srcdir="${src.test.java}"
            destdir="${build.test.java}"
            deprecation="on"
            includeantruntime="false" />
    </target>

    <target name="test" depends="compile,test.compile,dist">
        <junit printsummary="yes" haltonfailure="yes" fork="yes">
            <formatter type="brief"/>
            <classpath>
                <pathelement location="${build.test.java}"/>
                <pathelement path="${classpath.test.prop}"/>
            </classpath>
            <batchtest fork="yes" todir="${reports.dir}">
                <fileset dir="${build.test.java}">
                    <include name="**/*Test.class"/>
                </fileset>
            </batchtest>
        </junit>
    </target>

    <target name="dist" depends="compile">
        <war destfile="${dist}/HelloWorld-${version}-min.war" webxml="${src.war.conf}/WEB-INF/web.xml">
            <metainf file="${src.war.conf}/META-INF/context.xml"/>
            <classes dir="${build.main.java}"/>
            <lib dir="${lib}"/>
        </war>
    </target>

    <target name="deploy" depends="dist,undeploy">
        <deploy url="${tomcat.manager.url}"
            username="${tomcat.manager.username}"
            password="${tomcat.manager.password}"
            path="/${tomcat.deploy.path}"
            war="${dist}/HelloWorld-${version}-min.war" />
    </target>

    <target name="undeploy" depends="">
        <undeploy url="${tomcat.manager.url}"
            username="${tomcat.manager.username}"
            password="${tomcat.manager.password}"
            path="/${tomcat.deploy.path}"
            failonerror="false" />
    </target>
</project>
